{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Histoire",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"]
}
